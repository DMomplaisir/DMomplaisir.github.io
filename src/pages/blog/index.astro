---
/**
 * Blog Index Page
 * Architectural aesthetic with warm minimalism
 */

import { getAllBlogPosts, getAllBlogTags, formatDate, calculateReadingTime } from '../../utils/content-helpers';
import SEO from '../../components/SEO.astro';
import Footer from '../../components/Footer.astro';

// Import design system styles
import '../../styles/variables.css';
import '../../styles/fonts.css';

// Fetch all posts and tags at build time
const posts = await getAllBlogPosts();
const tags = await getAllBlogTags();

const pageTitle = 'Blog - Dylan Momplaisir';
const pageDescription = 'Thoughts on engineering, product development, and building software that matters.';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <SEO
    title={pageTitle}
    description={pageDescription}
    type="website"
    breadcrumbs={[
      { name: 'Home', url: '/' },
      { name: 'Blog', url: '/blog' },
    ]}
  />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="alternate" type="application/rss+xml" title="Dylan Momplaisir - Blog" href="/rss.xml">
  <meta name="theme-color" content="#900020">
</head>

<body>
  <!-- Subtle Grid Background -->
  <div class="grid-background" aria-hidden="true"></div>

  <!-- Header -->
  <header class="page-header">
    <nav class="nav-breadcrumb">
      <a href="/" class="breadcrumb-link">Home</a>
      <span class="breadcrumb-separator">/</span>
      <span class="breadcrumb-current">Blog</span>
    </nav>

    <div class="header-content">
      <h1 class="page-title">Blog</h1>
      <p class="page-subtitle">Thoughts on engineering, product, and building things that matter</p>
    </div>

    <!-- Tag Filter -->
    {tags.length > 0 && (
      <div class="tag-filter">
        <label for="tag-select" class="filter-label">Filter</label>
        <select id="tag-select" class="tag-select">
          <option value="">All Posts ({posts.length})</option>
          {tags.map(tag => {
            const count = posts.filter(p => p.data.tags?.includes(tag)).length;
            return <option value={tag}>{tag} ({count})</option>;
          })}
        </select>
      </div>
    )}
  </header>

  <!-- Blog Posts List -->
  <main class="posts-container">
    {posts.length > 0 ? (
      <div class="posts-list" id="posts-list">
        {posts.map(post => (
          <article class="post-card" data-tags={post.data.tags?.join(',') || ''}>
            <a href={`/blog/${post.slug}/`} class="post-link">
              <!-- Corner Accents -->
              <div class="corner-accent corner-tl" aria-hidden="true"></div>
              <div class="corner-accent corner-br" aria-hidden="true"></div>

              <div class="post-content">
                <!-- Date and Reading Time -->
                <div class="post-meta">
                  <time datetime={post.data.date.toISOString().split('T')[0]} class="post-date">
                    {formatDate(post.data.date)}
                  </time>
                  {post.data.reading_time && (
                    <span class="reading-time">{post.data.reading_time} min read</span>
                  )}
                </div>

                <h2 class="post-title">{post.data.title}</h2>
                <p class="post-description">{post.data.description}</p>

                <!-- Tags -->
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="tag-badge">{tag}</span>
                    ))}
                  </div>
                )}

                <span class="read-more">Read Article →</span>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <div class="empty-content">
          <h2 class="empty-title">Coming Soon</h2>
          <p class="empty-text">
            I'm working on some articles about engineering, product development,
            and lessons learned from building software. Check back soon!
          </p>
          <a href="/projects" class="empty-cta">View My Projects →</a>
        </div>
      </div>
    )}
  </main>

  <!-- Footer -->
  <Footer />
</body>
</html>

<script>
  // Tag Filtering
  const tagSelect = document.getElementById('tag-select') as HTMLSelectElement;

  if (tagSelect) {
    tagSelect.addEventListener('change', (e) => {
      const selectedTag = (e.target as HTMLSelectElement).value;
      const postCards = document.querySelectorAll('.post-card') as NodeListOf<HTMLElement>;

      postCards.forEach(card => {
        const cardTags = card.dataset.tags?.split(',') || [];

        if (!selectedTag || cardTags.includes(selectedTag)) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    });
  }
</script>

<style>
  /* ==================== GLOBAL RESET ==================== */

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    color: var(--text-primary);
    background-color: var(--warm-white);
    line-height: var(--leading-normal);
    overflow-x: hidden;
    position: relative;
  }

  /* ==================== GRID BACKGROUND ==================== */

  .grid-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(var(--blueprint-line) 1px, transparent 1px),
      linear-gradient(90deg, var(--blueprint-line) 1px, transparent 1px);
    background-size: var(--grid-unit) var(--grid-unit);
    opacity: 0.5;
    pointer-events: none;
    z-index: 0;
  }

  /* ==================== PAGE HEADER ==================== */

  .page-header {
    position: relative;
    padding: var(--space-xxxl) var(--space-lg) var(--space-xl);
    max-width: var(--width-narrow);
    margin: 0 auto;
    z-index: 1;
  }

  .nav-breadcrumb {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--concrete-400);
    margin-bottom: var(--space-lg);
    letter-spacing: var(--tracking-wide);
  }

  .breadcrumb-link {
    color: var(--burgundy-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .breadcrumb-link:hover {
    color: var(--burgundy-hover);
  }

  .breadcrumb-separator {
    margin: 0 var(--space-xs);
    color: var(--concrete-300);
  }

  .breadcrumb-current {
    color: var(--concrete-900);
  }

  .header-content {
    margin-bottom: var(--space-lg);
  }

  .page-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    letter-spacing: var(--tracking-tight);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-md);
  }

  .page-subtitle {
    font-size: var(--text-xl);
    color: var(--concrete-400);
    max-width: 60ch;
  }

  /* ==================== TAG FILTER ==================== */

  .tag-filter {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .filter-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--concrete-400);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
  }

  .tag-select {
    padding: var(--space-xs) var(--space-sm);
    background: var(--warm-white);
    border: var(--border-thin) solid var(--warm-gray-200);
    border-radius: var(--radius-base);
    color: var(--concrete-900);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: border-color var(--transition-base);
  }

  .tag-select:hover {
    border-color: var(--burgundy-primary);
  }

  .tag-select:focus {
    outline: none;
    border-color: var(--burgundy-primary);
    box-shadow: 0 0 0 3px rgba(144, 0, 32, 0.1);
  }

  /* ==================== POSTS LIST ==================== */

  .posts-container {
    position: relative;
    max-width: var(--width-narrow);
    margin: 0 auto;
    padding: 0 var(--space-lg) var(--space-xxl);
    z-index: 1;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .post-card {
    position: relative;
    background: var(--warm-white);
    border: var(--border-thin) solid var(--warm-gray-200);
    border-radius: var(--radius-base);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .post-card:hover {
    border-color: var(--burgundy-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .post-card:hover .corner-accent {
    opacity: 0.6;
  }

  .corner-accent {
    position: absolute;
    width: 16px;
    height: 16px;
    border: var(--border-thin) solid var(--burgundy-primary);
    opacity: 0.2;
    transition: opacity var(--transition-base);
    z-index: 2;
  }

  .corner-tl {
    top: var(--space-xs);
    left: var(--space-xs);
    border-right: none;
    border-bottom: none;
  }

  .corner-br {
    bottom: var(--space-xs);
    right: var(--space-xs);
    border-left: none;
    border-top: none;
  }

  .post-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-content {
    position: relative;
    padding: var(--space-lg);
    z-index: 3;
  }

  /* ==================== POST CARD CONTENT ==================== */

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-sm);
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--concrete-400);
    letter-spacing: var(--tracking-wide);
  }

  .reading-time {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--concrete-400);
    letter-spacing: var(--tracking-wide);
  }

  .reading-time::before {
    content: '·';
    margin-right: var(--space-sm);
  }

  .post-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    margin-bottom: var(--space-sm);
    line-height: var(--leading-snug);
  }

  .post-description {
    font-size: var(--text-base);
    color: var(--concrete-400);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-md);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-sm);
  }

  .tag-badge {
    padding: 2px var(--space-sm);
    background: var(--cream);
    border: var(--border-thin) solid var(--warm-gray-200);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--concrete-400);
  }

  .read-more {
    color: var(--burgundy-primary);
    font-weight: var(--weight-medium);
    font-size: var(--text-sm);
    transition: transform var(--transition-fast);
    display: inline-block;
  }

  .post-card:hover .read-more {
    transform: translateX(4px);
  }

  /* ==================== EMPTY STATE ==================== */

  .empty-state {
    text-align: center;
    padding: var(--space-xxxl) var(--space-lg);
  }

  .empty-content {
    max-width: 480px;
    margin: 0 auto;
    padding: var(--space-xxl);
    background: var(--cream);
    border: var(--border-thin) solid var(--warm-gray-200);
    border-radius: var(--radius-lg);
  }

  .empty-title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    margin-bottom: var(--space-md);
  }

  .empty-text {
    font-size: var(--text-base);
    color: var(--concrete-400);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-xl);
  }

  .empty-cta {
    display: inline-block;
    padding: calc(var(--space-sm) - 2px) var(--space-lg);
    background: var(--burgundy-primary);
    color: var(--warm-white);
    text-decoration: none;
    border-radius: var(--radius-base);
    font-weight: var(--weight-medium);
    transition: all var(--transition-base);
  }

  .empty-cta:hover {
    background: var(--burgundy-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-burgundy);
  }

  /* ==================== RESPONSIVE ==================== */

  @media (max-width: 768px) {
    .page-header {
      padding: var(--space-xxl) var(--space-md) var(--space-lg);
    }

    .posts-container {
      padding: 0 var(--space-md) var(--space-xl);
    }

    .post-content {
      padding: var(--space-md);
    }

    .tag-filter {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }

    .tag-select {
      width: 100%;
    }

    .post-meta {
      flex-wrap: wrap;
      gap: var(--space-sm);
    }

    .reading-time::before {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
