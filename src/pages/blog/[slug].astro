---
/**
 * Blog Post Detail Template
 * Consistent architectural aesthetic for all blog posts
 */

import { getCollection, type CollectionEntry } from 'astro:content';
import { getRelatedBlogPosts, formatDate, formatDateISO, calculateReadingTime } from '../../utils/content-helpers';
import SEO from '../../components/SEO.astro';
import Footer from '../../components/Footer.astro';

// Import design system styles
import '../../styles/variables.css';
import '../../styles/fonts.css';

// Generate static paths for all posts at build time
// Excludes draft posts in production builds
export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    // In development, include drafts; in production, exclude them
    if (import.meta.env.DEV) {
      return true;
    }
    return data.draft !== true;
  });

  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;

// Render markdown content
const { Content, remarkPluginFrontmatter } = await post.render();

// Get related posts based on shared tags
const relatedPosts = await getRelatedBlogPosts(post, 3);

// Destructure post data
const {
  title,
  description,
  date,
  author,
  tags = [],
  reading_time,
  cover_image,
} = post.data;

// Calculate reading time if not provided
const readingTime = reading_time || calculateReadingTime(post.body);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <SEO
    title={`${title} - Dylan Momplaisir`}
    description={description}
    type="article"
    publishedDate={date}
    image={cover_image?.src}
    breadcrumbs={[
      { name: 'Home', url: '/' },
      { name: 'Blog', url: '/blog' },
      { name: title, url: `/blog/${post.slug}` },
    ]}
  />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  <meta name="theme-color" content="#900020">
</head>

<body>
  <!-- Subtle Grid Background -->
  <div class="grid-background" aria-hidden="true"></div>

  <article class="post-detail">
    <!-- Header with Breadcrumb -->
    <header class="post-header">
      <nav class="breadcrumb">
        <a href="/" class="breadcrumb-link">Home</a>
        <span class="breadcrumb-separator">/</span>
        <a href="/blog" class="breadcrumb-link">Blog</a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">{title}</span>
      </nav>

      <div class="header-content">
        <h1 class="post-title">{title}</h1>
        <p class="post-subtitle">{description}</p>

        <!-- Post Meta -->
        <div class="post-meta">
          <div class="meta-item">
            <span class="meta-label">Published</span>
            <time datetime={formatDateISO(date)} class="meta-value">
              {formatDate(date)}
            </time>
          </div>

          <div class="meta-item">
            <span class="meta-label">Reading Time</span>
            <span class="meta-value">{readingTime} min</span>
          </div>

          {author && author !== 'Dylan Momplaisir' && (
            <div class="meta-item">
              <span class="meta-label">Author</span>
              <span class="meta-value">{author}</span>
            </div>
          )}
        </div>

        <!-- Tags -->
        {tags && tags.length > 0 && (
          <div class="post-tags">
            {tags.map(tag => (
              <span class="tag-badge">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    <!-- Post Content (Markdown) -->
    <section class="post-content">
      <Content />
    </section>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <aside class="related-section">
        <h2 class="section-heading">Related Posts</h2>
        <div class="related-grid">
          {relatedPosts.map(related => (
            <article class="related-card">
              <a href={`/blog/${related.slug}/`} class="related-link">
                <div class="corner-accent corner-tl" aria-hidden="true"></div>
                <div class="corner-accent corner-br" aria-hidden="true"></div>

                <div class="related-content">
                  <span class="related-date">
                    {formatDate(related.data.date)}
                  </span>
                  <h3 class="related-title">{related.data.title}</h3>
                  <p class="related-description">{related.data.description}</p>
                </div>
              </a>
            </article>
          ))}
        </div>
      </aside>
    )}

    <!-- Back Navigation -->
    <nav class="back-nav">
      <a href="/blog" class="back-link">‚Üê All Posts</a>
    </nav>
  </article>

  <!-- Footer -->
  <Footer />
</body>
</html>

<style>
  /* ==================== GLOBAL RESET ==================== */

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    color: var(--text-primary);
    background-color: var(--warm-white);
    line-height: var(--leading-normal);
    overflow-x: hidden;
    position: relative;
  }

  /* ==================== GRID BACKGROUND ==================== */

  .grid-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(var(--blueprint-line) 1px, transparent 1px),
      linear-gradient(90deg, var(--blueprint-line) 1px, transparent 1px);
    background-size: var(--grid-unit) var(--grid-unit);
    opacity: 0.5;
    pointer-events: none;
    z-index: 0;
  }

  /* ==================== POST HEADER ==================== */

  .post-detail {
    position: relative;
    z-index: 1;
  }

  .post-header {
    max-width: var(--width-narrow);
    margin: 0 auto;
    padding: var(--space-xxxl) var(--space-lg) var(--space-xxl);
  }

  .breadcrumb {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--concrete-400);
    margin-bottom: var(--space-xl);
    letter-spacing: var(--tracking-wide);
  }

  .breadcrumb-link {
    color: var(--burgundy-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .breadcrumb-link:hover {
    color: var(--burgundy-hover);
  }

  .breadcrumb-separator {
    margin: 0 var(--space-xs);
    color: var(--concrete-300);
  }

  .breadcrumb-current {
    color: var(--concrete-900);
  }

  .post-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    letter-spacing: var(--tracking-tight);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-md);
  }

  .post-subtitle {
    font-size: var(--text-xl);
    color: var(--concrete-400);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-xl);
  }

  /* ==================== POST META ==================== */

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
    padding: var(--space-md) 0;
    border-top: var(--border-thin) solid var(--warm-gray-200);
    border-bottom: var(--border-thin) solid var(--warm-gray-200);
    margin-bottom: var(--space-lg);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .meta-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--concrete-400);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
  }

  .meta-value {
    font-size: var(--text-base);
    color: var(--concrete-900);
    font-weight: var(--weight-medium);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tag-badge {
    padding: 4px var(--space-sm);
    background: var(--cream);
    border: var(--border-thin) solid var(--warm-gray-200);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--concrete-400);
  }

  /* ==================== POST CONTENT (MARKDOWN) ==================== */

  .post-content {
    max-width: var(--width-text);
    margin: 0 auto;
    padding: 0 var(--space-lg) var(--space-xxxl);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }

  .post-content :global(h2) {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    margin-top: var(--space-xxl);
    margin-bottom: var(--space-md);
    letter-spacing: var(--tracking-tight);
  }

  .post-content :global(h3) {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
  }

  .post-content :global(h4) {
    font-size: var(--text-xl);
    font-weight: var(--weight-medium);
    color: var(--concrete-900);
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .post-content :global(p) {
    margin-bottom: var(--space-md);
    color: var(--concrete-900);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-sm);
    color: var(--concrete-900);
  }

  .post-content :global(a) {
    color: var(--burgundy-primary);
    text-decoration: none;
    border-bottom: var(--border-thin) solid rgba(144, 0, 32, 0.3);
    transition: border-color var(--transition-fast);
  }

  .post-content :global(a:hover) {
    border-bottom-color: var(--burgundy-primary);
  }

  .post-content :global(blockquote) {
    padding: var(--space-md) var(--space-lg);
    margin: var(--space-lg) 0;
    background: var(--cream);
    border-left: var(--border-thick) solid var(--burgundy-primary);
    font-style: italic;
    color: var(--concrete-400);
    border-radius: var(--radius-base);
  }

  .post-content :global(pre) {
    padding: var(--space-md);
    background: var(--cream);
    border: var(--border-thin) solid var(--warm-gray-200);
    border-radius: var(--radius-base);
    overflow-x: auto;
    margin-bottom: var(--space-md);
  }

  .post-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    color: var(--burgundy-primary);
  }

  .post-content :global(pre code) {
    color: var(--concrete-900);
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-base);
    margin: var(--space-lg) 0;
  }

  .post-content :global(strong) {
    font-weight: var(--weight-semibold);
    color: var(--concrete-900);
  }

  /* ==================== RELATED POSTS ==================== */

  .related-section {
    max-width: var(--width-content);
    margin: 0 auto;
    padding: var(--space-xxxl) var(--space-lg);
    border-top: var(--border-thin) solid var(--warm-gray-200);
  }

  .section-heading {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    margin-bottom: var(--space-xl);
    letter-spacing: var(--tracking-tight);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-lg);
  }

  .related-card {
    position: relative;
    background: var(--warm-white);
    border: var(--border-thin) solid var(--warm-gray-200);
    border-radius: var(--radius-base);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .related-card:hover {
    border-color: var(--burgundy-primary);
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .related-card:hover .corner-accent {
    opacity: 0.6;
  }

  .corner-accent {
    position: absolute;
    width: 16px;
    height: 16px;
    border: var(--border-thin) solid var(--burgundy-primary);
    opacity: 0.2;
    transition: opacity var(--transition-base);
    z-index: 2;
  }

  .corner-tl {
    top: var(--space-xs);
    left: var(--space-xs);
    border-right: none;
    border-bottom: none;
  }

  .corner-br {
    bottom: var(--space-xs);
    right: var(--space-xs);
    border-left: none;
    border-top: none;
  }

  .related-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .related-content {
    position: relative;
    padding: var(--space-lg);
    z-index: 3;
  }

  .related-date {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--concrete-400);
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-xs);
    display: block;
  }

  .related-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    margin-bottom: var(--space-xs);
    line-height: var(--leading-snug);
  }

  .related-description {
    font-size: var(--text-sm);
    color: var(--concrete-400);
    line-height: var(--leading-normal);
  }

  /* ==================== BACK NAVIGATION ==================== */

  .back-nav {
    text-align: center;
    max-width: var(--width-content);
    margin: 0 auto;
    padding: 0 var(--space-lg) var(--space-xxxl);
  }

  .back-link {
    display: inline-block;
    padding: var(--space-sm) var(--space-lg);
    color: var(--concrete-400);
    text-decoration: none;
    border: var(--border-thin) solid var(--warm-gray-200);
    border-radius: var(--radius-base);
    transition: all var(--transition-base);
    font-size: var(--text-sm);
    font-family: var(--font-mono);
  }

  .back-link:hover {
    border-color: var(--burgundy-primary);
    color: var(--burgundy-primary);
  }

  /* ==================== RESPONSIVE ==================== */

  @media (max-width: 768px) {
    .post-header {
      padding: var(--space-xxl) var(--space-md) var(--space-xl);
    }

    .post-content {
      padding: 0 var(--space-md) var(--space-xxl);
      font-size: var(--text-base);
    }

    .post-meta {
      gap: var(--space-md);
    }

    .related-section {
      padding: var(--space-xxl) var(--space-md);
    }

    .related-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .back-nav {
      padding: 0 var(--space-md) var(--space-xxl);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
