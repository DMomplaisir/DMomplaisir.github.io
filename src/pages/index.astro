---
/*
 * Homepage - Dylan Momplaisir Portfolio
 * Elevation Grid + Blueprint Light Design System
 * Warm minimalism with architectural precision
 */

import { getCollection } from 'astro:content';
import SEO from '../components/SEO.astro';
import InteractiveLanding from '../components/InteractiveLanding.astro';
import Footer from '../components/Footer.astro';

// Import design system styles
import '../styles/variables.css';
import '../styles/fonts.css';

// Get featured projects
const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter(p => p.data.featured)
  .sort((a, b) => {
    const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
    const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
    return dateB - dateA;
  })
  .slice(0, 3);

const pageTitle = "Dylan Momplaisir - Full-Stack Engineer";
const pageDescription = "Full-stack engineer at The Atlantic. Building audio and content platforms that scale—with the systems thinking of an urbanist.";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator}>

  <SEO
    title={pageTitle}
    description={pageDescription}
    type="website"
  />

  <!-- Preconnect to fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="alternate" type="application/rss+xml" title="Dylan Momplaisir - Projects" href="/rss.xml">
  <meta name="theme-color" content="#900020">
</head>

<body>
  <!-- Subtle Grid Background (permanent, 2-3% opacity) -->
  <div class="grid-background" aria-hidden="true"></div>

  <!-- Elevation 0.0m: Hero Section -->
  <section class="hero-section elevation-0" id="hero">
    <div class="hero-container">
      <div class="elevation-marker" aria-hidden="true">
        <span class="marker-line"></span>
        <span class="marker-label">0.0m</span>
      </div>

      <h1 class="hero-name">Dylan Momplaisir</h1>

      <div class="hero-narrative">
        <p class="narrative-line">I think about software the way I used to think about cities:</p>
        <p class="narrative-line">who moves through it, what breaks, what lasts.</p>
        <p class="narrative-line">Currently building platforms at The Atlantic—</p>
        <p class="narrative-line">audio systems, search infrastructure, tools that scale.</p>
      </div>

      <div class="hero-ctas">
        <a href="#work" class="btn-primary">View Work</a>
        <a href="/resume.pdf" class="btn-secondary">Download Resume</a>
      </div>

      <a href="#work" class="scroll-indicator" aria-label="Scroll to view work">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="7 13 12 18 17 13"></polyline>
          <polyline points="7 6 12 11 17 6"></polyline>
        </svg>
      </a>
    </div>
  </section>

  <!-- Elevation +2.4m: Featured Work -->
  <section class="featured-work elevation-24" id="work">
    <div class="container">
      <div class="elevation-marker" aria-hidden="true">
        <span class="marker-line"></span>
        <span class="marker-label">+2.4m</span>
      </div>

      <h2 class="section-heading">Selected Work</h2>
      <p class="section-subtitle">Featured projects spanning full-stack engineering, product development, and technical leadership.</p>

      <!-- Stacked Papers Slider -->
      <div class="project-stack-container">
        <div class="project-stack">
          {featuredProjects.map((project, index) => (
            <article class="project-card" data-index={index} data-stack-position={index}>
              <a href={`/projects/${project.slug}/`} class="card-link">
                <!-- Paper texture overlay -->
                <div class="paper-texture" aria-hidden="true"></div>

                <!-- Blueprint Overlay (appears on hover) -->
                <div class="blueprint-overlay" aria-hidden="true">
                  <svg class="blueprint-grid" width="100%" height="100%">
                    <defs>
                      <pattern id={`grid-${project.slug}`} width="20" height="20" patternUnits="userSpaceOnUse">
                        <path d="M 20 0 L 0 0 0 20" fill="none" stroke="var(--blueprint-line)" stroke-width="1"/>
                      </pattern>
                    </defs>
                    <rect width="100%" height="100%" fill={`url(#grid-${project.slug})`} />
                  </svg>
                </div>

                <!-- Architectural Corner Accents -->
                <div class="corner-accent corner-tl" aria-hidden="true"></div>
                <div class="corner-accent corner-br" aria-hidden="true"></div>

                <div class="card-content">
                  <!-- Year Badge (architectural style) -->
                  {project.data.date && (
                    <div class="year-badge" aria-label={`Year: ${new Date(project.data.date).getFullYear()}`}>
                      {new Date(project.data.date).getFullYear()}
                    </div>
                  )}

                  <h3 class="project-title">{project.data.title}</h3>
                  <p class="project-description">{project.data.description}</p>

                  <!-- Technical Specifications -->
                  <div class="project-meta">
                    {project.data.tech_stack && (
                      <div class="meta-item">
                        <span class="meta-label">Tech</span>
                        <span class="meta-value">{project.data.tech_stack.slice(0, 4).join(', ')}</span>
                      </div>
                    )}
                    {project.data.impact && (
                      <div class="meta-item">
                        <span class="meta-label">Impact</span>
                        <span class="meta-value">{project.data.impact}</span>
                      </div>
                    )}
                  </div>

                  <span class="view-project">View Full Case Study →</span>
                </div>
              </a>
            </article>
          ))}
        </div>

        <!-- Stack Navigation -->
        <div class="stack-nav">
          <button class="stack-btn stack-prev" aria-label="Previous project">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>

          <div class="stack-indicators">
            {featuredProjects.map((_, index) => (
              <button class="stack-indicator" data-index={index} aria-label={`Go to project ${index + 1}`}></button>
            ))}
          </div>

          <button class="stack-btn stack-next" aria-label="Next project">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      </div>

      <a href="/projects" class="view-all">View All Projects →</a>
    </div>
  </section>

  <!-- Elevation +4.8m: About Preview -->
  <section class="about-preview elevation-48" id="about">
    <div class="container-narrow">
      <div class="elevation-marker" aria-hidden="true">
        <span class="marker-line"></span>
        <span class="marker-label">+4.8m</span>
      </div>

      <h2 class="section-heading">About</h2>
      <div class="about-content">
        <p class="large-text">
          I build digital products that solve real problems.
          <span class="highlight">5+ years shipping features at scale</span>, specializing in
          product engineering and technical leadership.
        </p>
        <p class="body-text">
          From urbanism to full-stack engineering—my path bridges architecture,
          data journalism, and product development. I bring systems thinking to every project,
          creating platforms that transform how we tell stories and understand our world.
        </p>
      </div>
      <a href="/about" class="learn-more">Learn More →</a>
    </div>
  </section>

  <!-- Footer -->
  <Footer />

  <!-- Interactive Features -->
  <InteractiveLanding />

  <script>
    // Stacked Papers Functionality with Swipe Gestures
    const cards = document.querySelectorAll('.project-card') as NodeListOf<HTMLElement>;
    const prevBtn = document.querySelector('.stack-prev');
    const nextBtn = document.querySelector('.stack-next');
    const indicators = document.querySelectorAll('.stack-indicator');
    const stackContainer = document.querySelector('.project-stack-container');

    let currentIndex = 0;
    const totalCards = cards.length;
    let autoplayInterval: number;
    let isAnimating = false;

    // Swipe/Drag state
    let isDragging = false;
    let startX = 0;
    let startY = 0;
    let currentX = 0;
    let dragDistance = 0;
    let dragStartTime = 0;

    // Thresholds
    const SWIPE_THRESHOLD = 80; // Minimum distance to trigger swipe
    const VELOCITY_THRESHOLD = 0.5; // Minimum velocity for quick swipe
    const MAX_ROTATION = 15; // Maximum rotation during drag (degrees)

    function updateStack() {
      cards.forEach((card, index) => {
        const position = (index - currentIndex + totalCards) % totalCards;
        card.setAttribute('data-stack-position', position.toString());

        if (position > 2) {
          card.style.display = 'none';
        } else {
          card.style.display = 'block';
        }

        // Reset any inline transforms from dragging
        if (!isDragging) {
          card.style.transform = '';
        }
      });

      indicators.forEach((indicator, index) => {
        indicator.classList.toggle('active', index === currentIndex);
      });
    }

    function getTopCard(): HTMLElement | null {
      return document.querySelector('.project-card[data-stack-position="0"]') as HTMLElement;
    }

    function animateCardOut(direction: 'left' | 'right') {
      if (isAnimating) return;
      isAnimating = true;

      const topCard = getTopCard();
      if (!topCard) {
        isAnimating = false;
        return;
      }

      // Set custom property for direction
      const exitX = direction === 'right' ? 120 : -120;
      const exitRotation = direction === 'right' ? 18 : -18;

      topCard.style.setProperty('--exit-x', `${exitX}%`);
      topCard.style.setProperty('--exit-rotation', `${exitRotation}deg`);
      topCard.classList.add('removing');

      // Animate cards beneath rising up
      const secondCard = document.querySelector('.project-card[data-stack-position="1"]') as HTMLElement;
      const thirdCard = document.querySelector('.project-card[data-stack-position="2"]') as HTMLElement;

      if (secondCard) secondCard.classList.add('rising');
      if (thirdCard) thirdCard.classList.add('rising');

      setTimeout(() => {
        topCard.classList.remove('removing');
        topCard.style.removeProperty('--exit-x');
        topCard.style.removeProperty('--exit-rotation');

        if (secondCard) secondCard.classList.remove('rising');
        if (thirdCard) thirdCard.classList.remove('rising');

        currentIndex = (currentIndex + 1) % totalCards;
        updateStack();
        isAnimating = false;
      }, 500);
    }

    function nextCard() {
      animateCardOut('right');
    }

    function prevCard() {
      if (isAnimating) return;
      isAnimating = true;

      // Bring previous card from left
      currentIndex = (currentIndex - 1 + totalCards) % totalCards;
      updateStack();

      const topCard = getTopCard();
      if (topCard) {
        topCard.classList.add('entering-left');
        setTimeout(() => {
          topCard.classList.remove('entering-left');
          isAnimating = false;
        }, 450);
      } else {
        isAnimating = false;
      }
    }

    function goToCard(index: number) {
      if (index === currentIndex || isAnimating) return;
      const direction = index > currentIndex ? 'right' : 'left';
      animateCardOut(direction);
    }

    // Drag/Swipe Handlers
    function handleDragStart(e: TouchEvent | MouseEvent) {
      if (isAnimating) return;

      const topCard = getTopCard();
      if (!topCard) return;

      // Check if we're clicking on the top card
      const target = e.target as HTMLElement;
      if (!topCard.contains(target)) return;

      isDragging = true;
      dragStartTime = Date.now();

      if (e instanceof TouchEvent) {
        startX = e.touches[0].clientX;
        startY = e.touches[0].clientY;
      } else {
        startX = e.clientX;
        startY = e.clientY;
        e.preventDefault();
      }

      currentX = startX;
      dragDistance = 0;

      topCard.classList.add('dragging');
      stopAutoplay();
    }

    function handleDragMove(e: TouchEvent | MouseEvent) {
      if (!isDragging) return;

      const topCard = getTopCard();
      if (!topCard) return;

      let clientX: number;
      let clientY: number;

      if (e instanceof TouchEvent) {
        clientX = e.touches[0].clientX;
        clientY = e.touches[0].clientY;
      } else {
        clientX = e.clientX;
        clientY = e.clientY;
      }

      // Check if vertical scroll is dominant (for mobile)
      const deltaX = clientX - startX;
      const deltaY = clientY - startY;

      if (Math.abs(deltaY) > Math.abs(deltaX) && Math.abs(deltaX) < 10) {
        return; // Let vertical scroll happen
      }

      if (e instanceof TouchEvent && Math.abs(deltaX) > 10) {
        e.preventDefault();
      }

      currentX = clientX;
      dragDistance = currentX - startX;

      // Calculate rotation based on drag distance
      const rotation = (dragDistance / window.innerWidth) * MAX_ROTATION * 2;
      const clampedRotation = Math.max(-MAX_ROTATION, Math.min(MAX_ROTATION, rotation));

      // Calculate opacity for feedback
      const progress = Math.min(Math.abs(dragDistance) / SWIPE_THRESHOLD, 1);
      const scale = 1 - (progress * 0.02);

      // Apply transform
      topCard.style.transform = `
        translateX(${dragDistance}px)
        rotate(${clampedRotation}deg)
        scale(${scale})
      `;

      // Visual feedback: tilt shadow
      const shadowOpacity = 0.08 + (progress * 0.08);
      const shadowBlur = 40 + (progress * 20);
      topCard.style.boxShadow = `
        ${dragDistance * 0.1}px ${12 + progress * 8}px ${shadowBlur}px rgba(144, 0, 32, ${shadowOpacity}),
        0 6px 20px rgba(0, 0, 0, 0.12)
      `;
    }

    function handleDragEnd(e: TouchEvent | MouseEvent) {
      if (!isDragging) return;

      const topCard = getTopCard();
      isDragging = false;

      if (topCard) {
        topCard.classList.remove('dragging');
      }

      // Calculate velocity
      const dragDuration = Date.now() - dragStartTime;
      const velocity = Math.abs(dragDistance) / dragDuration;

      // Determine if swipe should complete
      const shouldSwipe = Math.abs(dragDistance) > SWIPE_THRESHOLD || velocity > VELOCITY_THRESHOLD;

      if (shouldSwipe && topCard) {
        // Complete the swipe
        const direction = dragDistance > 0 ? 'right' : 'left';

        // Reset inline styles before animation
        topCard.style.transform = '';
        topCard.style.boxShadow = '';

        animateCardOut(direction);
      } else if (topCard) {
        // Snap back with spring animation
        topCard.classList.add('snapping-back');
        topCard.style.transform = '';
        topCard.style.boxShadow = '';

        setTimeout(() => {
          topCard.classList.remove('snapping-back');
        }, 400);
      }

      startAutoplay();
    }

    // Event Listeners
    if (prevBtn) {
      prevBtn.addEventListener('click', () => {
        stopAutoplay();
        prevCard();
        startAutoplay();
      });
    }

    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        stopAutoplay();
        nextCard();
        startAutoplay();
      });
    }

    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        stopAutoplay();
        goToCard(index);
        startAutoplay();
      });
    });

    // Touch events for swipe
    if (stackContainer) {
      stackContainer.addEventListener('touchstart', handleDragStart, { passive: true });
      stackContainer.addEventListener('touchmove', handleDragMove, { passive: false });
      stackContainer.addEventListener('touchend', handleDragEnd);
      stackContainer.addEventListener('touchcancel', handleDragEnd);

      // Mouse events for desktop drag
      stackContainer.addEventListener('mousedown', handleDragStart);

      stackContainer.addEventListener('mouseenter', stopAutoplay);
      stackContainer.addEventListener('mouseleave', () => {
        if (isDragging) {
          handleDragEnd(new MouseEvent('mouseup'));
        }
        startAutoplay();
      });
    }

    document.addEventListener('mousemove', handleDragMove);
    document.addEventListener('mouseup', handleDragEnd);

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        stopAutoplay();
        prevCard();
        startAutoplay();
      } else if (e.key === 'ArrowRight') {
        stopAutoplay();
        nextCard();
        startAutoplay();
      }
    });

    // Handle clicks on top card (navigate to project)
    cards.forEach(card => {
      card.addEventListener('click', (e) => {
        // Only navigate if not dragging and card is on top
        if (card.getAttribute('data-stack-position') === '0' && !isDragging && dragDistance === 0) {
          // Let the link handle it naturally
        } else if (card.getAttribute('data-stack-position') !== '0') {
          e.preventDefault();
        }
      });
    });

    function startAutoplay() {
      stopAutoplay();
      autoplayInterval = window.setInterval(nextCard, 7000);
    }

    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }

    // Initialize
    updateStack();
    startAutoplay();

    // Pause autoplay when page is hidden
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        stopAutoplay();
      } else {
        startAutoplay();
      }
    });
  </script>
</body>
</html>

<style>
  /* ==================== GLOBAL RESETS ==================== */

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    color: var(--text-primary);
    background-color: var(--warm-white);
    line-height: var(--leading-normal);
    overflow-x: hidden;
    position: relative;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  /* ==================== GRID BACKGROUND ==================== */

  .grid-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(var(--blueprint-line) 1px, transparent 1px),
      linear-gradient(90deg, var(--blueprint-line) 1px, transparent 1px);
    background-size: var(--grid-unit) var(--grid-unit);
    opacity: 0.5;
    pointer-events: none;
    z-index: 0;
  }

  /* ==================== ELEVATION MARKERS ==================== */

  .elevation-marker {
    position: absolute;
    left: var(--space-lg);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    opacity: 0.4;
    transition: opacity var(--transition-base);
  }

  section:hover .elevation-marker {
    opacity: 0.7;
  }

  .marker-line {
    width: 16px;
    height: 1px;
    background: var(--concrete-400);
  }

  .marker-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--concrete-400);
    letter-spacing: var(--tracking-wide);
  }

  /* ==================== HERO SECTION (Elevation 0.0m) ==================== */

  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xxl) var(--space-lg);
    z-index: 1;
  }

  .hero-section .elevation-marker {
    top: var(--space-xxl);
  }

  .hero-container {
    max-width: var(--width-text);
    text-align: center;
    animation: heroFadeIn var(--duration-slower) var(--ease-smooth) forwards;
  }

  @keyframes heroFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-name {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: var(--weight-regular);
    font-variation-settings: 'wdth' 75; /* Narrow Editorial Old */
    color: var(--concrete-900);
    letter-spacing: var(--tracking-tight);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-xl);
  }

  .hero-narrative {
    margin-bottom: var(--space-xl);
    animation: narrativeFadeIn var(--duration-slower) var(--ease-smooth) 300ms forwards;
    opacity: 0;
  }

  @keyframes narrativeFadeIn {
    to { opacity: 1; }
  }

  .narrative-line {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    color: var(--concrete-400);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-xs);
  }

  .narrative-line:last-child {
    margin-bottom: 0;
  }

  .hero-ctas {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    flex-wrap: wrap;
    animation: ctasFadeIn var(--duration-slower) var(--ease-smooth) 600ms forwards;
    opacity: 0;
  }

  @keyframes ctasFadeIn {
    to { opacity: 1; }
  }

  .btn-primary,
  .btn-secondary {
    padding: calc(var(--space-sm) - 2px) var(--space-lg);
    text-decoration: none;
    border-radius: var(--radius-base);
    font-weight: var(--weight-medium);
    font-size: var(--text-base);
    transition: all var(--transition-base);
    display: inline-block;
    border: var(--border-thin) solid transparent;
  }

  .btn-primary {
    background: var(--burgundy-primary);
    color: var(--warm-white);
    border-color: var(--burgundy-primary);
  }

  .btn-primary:hover {
    background: var(--burgundy-hover);
    border-color: var(--burgundy-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-burgundy);
  }

  .btn-secondary {
    background: transparent;
    color: var(--concrete-900);
    border-color: var(--concrete-300);
  }

  .btn-secondary:hover {
    border-color: var(--burgundy-primary);
    color: var(--burgundy-primary);
    transform: translateY(-2px);
  }

  .scroll-indicator {
    position: absolute;
    bottom: var(--space-lg);
    left: 50%;
    transform: translateX(-50%);
    color: var(--concrete-400);
    animation: scrollBounce 2s ease-in-out infinite;
    opacity: 0.6;
    transition: opacity var(--transition-base);
  }

  .scroll-indicator:hover {
    opacity: 1;
  }

  @keyframes scrollBounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(8px); }
  }

  /* ==================== FEATURED WORK (Elevation +2.4m) ==================== */

  .featured-work {
    position: relative;
    padding: var(--space-xxxl) var(--space-lg);
    background: var(--cream);
    z-index: 1;
  }

  .featured-work .elevation-marker {
    top: calc(var(--space-xxxl) + var(--space-sm));
  }

  .container {
    max-width: var(--width-narrow);
    margin: 0 auto;
  }

  .section-heading {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: var(--weight-regular);
    color: var(--concrete-900);
    margin-bottom: var(--space-md);
    letter-spacing: var(--tracking-tight);
    line-height: var(--leading-snug);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--concrete-400);
    margin-bottom: var(--space-xl);
    max-width: 60ch;
  }

  /* ==================== STACKED PAPERS PROJECT CARDS ==================== */

  .project-stack-container {
    position: relative;
    margin-bottom: var(--space-xxl);
    perspective: 1800px;
    padding: var(--space-lg) 0;
  }

  .project-stack {
    position: relative;
    width: 100%;
    max-width: var(--width-narrow);
    margin: 0 auto;
    min-height: 480px;
    display: flex;
